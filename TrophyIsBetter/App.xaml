<Application x:Class="TrophyIsBetter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:TrophyIsBetter.Extensions.Helpers">
  <Application.Resources>
    <ResourceDictionary>
      <!-- Material Design -->
      <ResourceDictionary.MergedDictionaries>
        <materialDesign:CustomColorTheme BaseTheme="Inherit"
                                         PrimaryColor="SlateBlue"
                                         SecondaryColor="DarkSlateBlue" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        <ResourceDictionary Source="/TrophyIsBetter;component/Resources/Dictionaries/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <helpers:StringToImageConverter x:Key="StringToImageConverter" />
      <helpers:IndexConverter x:Key="IndexConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
